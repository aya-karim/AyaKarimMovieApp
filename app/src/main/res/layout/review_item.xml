<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="author: "
            android:id="@+id/authorLable"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="52dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content: "
            android:id="@+id/contentlabel"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/authorLable"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reviewcontent"
            android:text="actual content"
            android:layout_alignBaseline="@+id/contentlabel"
            android:layout_alignBottom="@+id/contentlabel"
            android:layout_toRightOf="@+id/contentlabel"
            android:layout_toEndOf="@+id/contentlabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author"
        android:text="actual author"
        android:layout_alignBaseline="@+id/authorLable"
        android:layout_alignBottom="@+id/authorLable"
        android:layout_toRightOf="@+id/contentlabel"
        android:layout_toEndOf="@+id/contentlabel" />

</RelativeLayout>